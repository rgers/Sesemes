<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout android:layout_height="match_parent" android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_x="5dip" android:layout_y="5dip" xmlns:android="http://schemas.android.com/apk/res/android">
            <Button android:id="@+id/btn_contact" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_toRightOf="@+id/txt_numer" android:layout_alignTop="@+id/txt_numer" android:layout_alignBottom="@+id/txt_numer" android:text="@string/btn_contact" android:textSize="10dip"></Button>
