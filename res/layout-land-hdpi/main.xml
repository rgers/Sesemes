<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout android:layout_height="match_parent" android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_x="5dip" android:layout_y="5dip" xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageButton android:src="@drawable/lapka" android:id="@+id/btn_contact" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_toRightOf="@+id/txt_numer" android:layout_alignTop="@+id/txt_numer" android:layout_alignBottom="@+id/txt_numer" android:text="@string/btn_contact"></ImageButton>
            <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_below="@+id/btn_contact" android:layout_toRightOf="@+id/btn_contact">
                <TextView android:text="Konto:" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1"></TextView>
                <Spinner android:id="@+id/spn_konta" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content"></Spinner>
                <Button android:layout_width="150dip" android:layout_height="wrap_content" android:text="Wyślij" android:id="@+id/btn_wyslij"></Button>
            </LinearLayout>
            <EditText android:text="" android:id="@+id/txt_wiadomosc" android:layout_width="250dip" android:layout_below="@+id/txt_numer" android:layout_alignLeft="@+id/txt_numer" android:layout_alignRight="@+id/txt_numer" android:hint="Wiadomość" android:inputType="textMultiLine" android:gravity="top" android:layout_height="260dp"></EditText>
            <TextView android:layout_height="wrap_content" android:id="@+id/txt_znaki" android:layout_width="wrap_content" android:layout_toRightOf="@+id/txt_wiadomosc" android:layout_alignTop="@+id/txt_wiadomosc" android:text="999"></TextView>
            <EditText android:text="" android:layout_height="50dip" android:id="@+id/txt_numer" android:hint="Numer telefonu" android:layout_width="250dip"></EditText>
        </RelativeLayout>
 

